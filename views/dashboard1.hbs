      </main>
      <div class="right">
        <div class="top">
          <h3 style="font-size: medium">Hi {{name}},</h3>
          {{#if admin}} 
          <h3 style="font-size: medium; color: #111e88;">Your Role: Admin</h3>
          {{else}} 
          <h3 style="color: #111e88; font-size: medium;">Your Role: Viewer<h3>
          {{/if}}
          <button id="menu-btn">
            <span class="material-icons-sharp"> menu </span>
          </button>
          <div class="theme-toggler">
            <span class="material-icons-sharp active"> wifi </span>
            <span class="material-icons-sharp"> 4g_mobiledata </span>
          </div>
        </div>
        <!-- End of top -->
        <div class="gauge-charts">
          <h2>Gauge Charts</h2>
          <div class="item">
            <div id="temperature-gauge1"></div>
          </div>
          <div class="item">
            <div id="humidity-gauge1"></div>
          </div>
          <div class="item">
            <div id="temperature-gauge2"></div>
          </div>
          <div class="item">
            <div id="humidity-gauge2"></div>
          </div>
        </div>
      </div>

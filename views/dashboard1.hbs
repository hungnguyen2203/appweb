      <main>
        <h1>SENSOR DASHBOARD</h1>
        <div class="connection-status">
          <h3>Connection Status: <span class="status">Disconnected</span></h3>
        </div>
        <h2>DEVICE NO.1</h2>
        <div class="insights1">
          <div class="temperature">
            <div class="middle">
              <div class="right">
                <h3>Temperature</h3>
                <h3 id="temperature1"></h3>
              </div>
              <div class="icon">
                <span class="material-icons-sharp"> device_thermostat </span>
              </div>
            </div>
          </div>
          <!-- End of temperature1 -->
          <div class="humidity">
            <div class="middle">
              <div class="right">
                <h3>Humidity</h3>
                <h3 id="humidity1"></h3>
              </div>
              <div class="icon">
                <span class="material-icons-sharp">water_drop</span>
              </div>
            </div>
          </div>
        </div>
        <h2>DEVICE NO.2</h2>
        <div class="insights2">
          <div class="temperature">
            <div class="middle">
              <div class="right">
                <h3>Temperature</h3>
                <h3 id="temperature2"></h3>
              </div>
              <div class="icon">
                <span class="material-icons-sharp"> device_thermostat </span>
              </div>
            </div>
          </div>
          <!-- End of temperature1 -->
          <div class="humidity">
            <div class="middle">
              <div class="right">
                <h3>Humidity</h3>
                <h3 id="humidity2"></h3>
              </div>
              <div class="icon">
